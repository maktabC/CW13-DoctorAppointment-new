@using cw12.Entities

@model List<Reservation>
@{
    var categories = ViewData["Categories"] as List<Sickness>;
}
<div class="d-flex align-items-start">
    <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        @foreach (var name in categories)
        {
                <button class="nav-link" id="@name.Id" data-bs-toggle="pill" data-bs-target="#v-pills-settings" type="button" role="tab" aria-controls="v-pills-settings" aria-selected="false" onclick="GetReservation(@name.Id)">@name.Name</button>
        }
    </div>
    <div class="tab-content" id="v-pills-tabContent">
        @foreach (var name in categories)
        {
                <div class="tab-pane fade" id="@name.Id" role="tabpanel" aria-labelledby="@name.Id">this is test 123</div>
        }
    </div>
</div>
